<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BackStory">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.PickPowerFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/hero_bg_gradient"
            tools:context=".Fragments.MainFragment">

            <LinearLayout
                android:id="@+id/pick_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/heroText"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textAllCaps="true"
                    android:textColor="#FAC740"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/heroImg"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/backText"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="BACKSTORY"
                    android:textAllCaps="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/storyText"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/primText"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="100dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="PRIMARY POWER"
                    android:textAllCaps="true"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/primBtn"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/hero_button"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textColor="#FAC740" />

                <TextView
                    android:id="@+id/secText"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="100dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="Secondary Power"
                    android:textAllCaps="true"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/primBtn2"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/hero_button"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textColor="#FAC740" />

                <Button
                    android:id="@+id/startBtn"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/hero_solid_button"
                    android:backgroundTint="#FAC740"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="Start Over"
                    android:textColor="#10161D"
                    android:textSize="22sp" />

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>
</FrameLayout>